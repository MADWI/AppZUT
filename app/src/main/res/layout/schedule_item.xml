<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/hours_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/hour_drawable_padding"
            android:drawableStart="@drawable/ic_timer_white_18dp"
            android:drawableLeft="@drawable/ic_timer_white_18dp"
            android:maxLength="5"
            android:textColor="@color/white"
            android:textSize="@dimen/schedule_hour_text_size"
            tools:text="12:15" />

        <TextView
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/hour_drawable_padding"
            android:drawableStart="@drawable/ic_timer_off_white_18dp"
            android:drawableLeft="@drawable/ic_timer_off_white_18dp"
            android:maxLength="5"
            android:textColor="@color/white"
            android:textSize="@dimen/schedule_hour_text_size"
            tools:text="14:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_school_white_24dp"
                android:tint="@color/colorAccent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/name_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/textGray"
                android:textSize="14sp"
                tools:text="Budowanie aplikacji w systemach mobilnych (wykład)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person_white_24dp"
                android:tint="@color/colorAccent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/room_lecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/textGray"
                android:textSize="12sp"
                tools:text="dr. inż. Radosław Maciaszczyk WI WI2-14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

