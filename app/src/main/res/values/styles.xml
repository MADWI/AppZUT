<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AboutUs" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionMenuTextAppearance">@style/AboutTextAppearance</item>
    </style>

    <style name="AppText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppText.About">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.About.Label">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.About.ExpandedToolbarTitle">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AboutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
